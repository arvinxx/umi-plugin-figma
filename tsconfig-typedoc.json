{
  "include": ["types"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "noStrictGenericChecks": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "lib",
    "src/.umi/**",
    "fixtures",
    "examples"
  ]
}
